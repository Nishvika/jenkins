pipeline {
   agent any
   environment {
      VALUE_ONE = '1'
      VALUE_TWO = '2'
      VALUE_THREE = '3'
   }
   parameters {
               choice choices: ['1', '2', ], description: 'Enter the number', name: 'value'
               choice choices: ['main', 'sravani', 'kiran', 'nishvika'], description: 'Enter the branch name', name: 'Branch'
   }
   stages {
   
      // skip a stage while creating the pipeline
      stage("A stage to be skipped") {
         when {
            expression { $params.value }  //skip this stage
         }
         steps {
            echo 'enter value is true'
         }
      }
    }  
}
